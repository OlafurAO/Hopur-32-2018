@model List<BookStore.Models.ViewModels.BookListViewModel>

@{
    var bookList = @Model;
}

@if(bookList.Count > 0)
{
    <h2>@bookList.Count result(s) found!</h2>
    <table style="width:100%">
        <tr>
            <th>Name</th>
            <th>Author</th> 
            <th>Category</th>
            <th>Rating</th>
            <th>Price</th>
        </tr>
        @foreach(var book in bookList)
        {
            <tr>
                <td>@Html.ActionLink(book.Name, "Details", "Book", new { id = book.ID })</td> 
                <td>@Html.ActionLink(book.Author, "Details", "Author", new { id = book.AuthorID })</td> 
                <td>@book.Category</td> <td>@book.Rating.ToString("0.##")</td> <td>@book.Price</td>
            </tr>           
        }
    </table>
}

else
{
    <h2>No matching results :c</h2>
}
