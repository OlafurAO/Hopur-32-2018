@model BookStore.Models.ViewModels.BookListViewModel

@{
    var book = @Model;
}

<div>
    <h3> @book.Name </h3>
    <h4> @book.Author</h4>
    <h4> @book.Rating</h4>
    <h5> @book.Price </h5>



    @if(book.CopiesAvailable <= 0)
    {
        <p> Not in Stock </p>
    }

    else
    {
        <form asp-action="AddToCart" asp-controller="Cart">
            <input type="submit" class="btn btn-default" value="Add to Cart"/>
        </form>
    
    }

</div>
