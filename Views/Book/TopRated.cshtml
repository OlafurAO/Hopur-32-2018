@model List<BookStore.Models.ViewModels.BookListViewModel>

@{
    var bookList = @Model;
}
<div>
    <h1> Our top ten rated books </h1>
     <table style="width:100%">
        <tr>
            <th>Name</th>
            <th>Author</th> 
            <th>Category</th>
            <th>Rating</th>
            <th>Price</th>
        </tr>
        @foreach(var book in bookList)
        {  
            <tr>
                <td><a>@book.Name</a></td> <td><a>@book.Author</a></td> <td>@book.Category</td> <td>@book.Rating</td> <td>@book.Price</td>
            </tr>                
        }
    </table>
</div>