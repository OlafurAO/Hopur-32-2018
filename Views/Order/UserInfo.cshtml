@model List<BookStore.Models.ViewModels.CartListViewModel>

@{
    var cartList = @Model;
    double totalPrice = 0;
    int totalItems = 0;
}

<a href="javascript:history.back()"> Back </a>

@using(Html.BeginForm("Review", "Order", FormMethod.Get))
{
    <div style="display: inline-block;vertical-align: top;">
        <h2>Input Your Information</h2>
        <form style="margin-bottom:5px;">
            First name:<br>
            @Html.TextBox("FirstName", null, new {required="required", style="height:27px;border-radius:4px;"})<br>

            Last name:<br>
            @Html.TextBox("LastName", null, new {required="required", style="height:27px;border-radius:4px;"})<br>

            Shipping Address:<br>
            @Html.TextBox("ShippingAddress", null, new {required="required", style="height:27px;border-radius:4px;"}) <br>

            Billing Address:<br>
            @Html.TextBox("BillingAddress", null, new {required="required", style="height:27px;border-radius:4px;"}) <br>

            City:<br>
            @Html.TextBox("City", null, new {required="required", style="height:27px;border-radius:4px;"}) <br>

            Country:<br>
            <select name="Country">
                <option value="">Select Country</option>
                <option value="United States">United States</option>
                <option value="Iceland">Iceland</option>
                <option value="United Kingdom"> United Kingdom</option>
                <option value="Sweden">Sweden</option>
            </select> <br>

            
            
           @* @Html.TextBox("Country", null, new {required="required", style="height:27px;border-radius:4px;"}) <br> *@

            Zip Code:<br>
            @Html.TextBox("ZipCode", null, new {required="required", style="lheight:27px;border-radius:4px;"})<br>

            <input type="submit" value="Confirm Information" style="margin-top: 20px;" class="btn btn-info"/>
        </form>
    </div>
}

<div style="display: inline-block; vertical-align: top;">
    <h3>Cart</h3>
    <table style="border-collapse: separate; border: 1px solid;border-spacing: 10px;">
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
        <tr>

        @foreach(var item in cartList)
        {
            <tr>               
                <td>@item.Book.Name</td>
                <td>@item.Quantity</td>
                <td>$@item.Book.Price </td>
            </tr>

            totalPrice += @item.Book.Price;
            totalItems++;
        }
        <tr></tr>

        <tr>
            <th>Total Price</th>
            <th>Items</th>
        </tr>

        <tr>
            <td>$@totalPrice</td> <td>@totalItems</td>
        </tr>

    <table>
</div>

